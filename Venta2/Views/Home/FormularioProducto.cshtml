

@{
    ViewBag.Title = "FormularioProducto";
}



<fieldset>
    <legend>Mantendor Producto</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control" })
            </span>
        </div>



        <div class="form-group">
            <span class="col-md-2">
                Codigo de barra
            </span>
            <span class="col-md-6">
                @Html.TextBox("codigobarra", null, new { @class = "form-control" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Familia
            </span>
            <span class="col-md-6">
                @Html.TextBox("familia", null, new { @class = "form-control" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Precio
            </span>
            <span class="col-md-6">
                @Html.TextBox("Precio", null, new { @class = "form-control" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Descuento Tope
            </span>
            <span class="col-md-6">
                @Html.TextBox("Precio", null, new { @class = "form-control" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Descripcion
            </span>
            <span class="col-md-6">
                @Html.TextBox("decripcion", null, new { @class = "form-control" })
            </span>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar formulario</button>
        </div>

    }

</fieldset>